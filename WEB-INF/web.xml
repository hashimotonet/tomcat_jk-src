<?xml version="1.0" encoding="Shift_JIS"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

	
<web-app>
  <display-name>Jakarta徹底攻略アプリケーション</display-name>
  
<listener>
  <listener-class>HSQLDBServletContextListener</listener-class>
</listener>

  <!-- Standard Action Servlet Configuration (with debugging) -->
  <servlet>
    <servlet-name>SearchServlet</servlet-name>
    <servlet-class>tomcat_jk.servlet.SearchServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
  
  <servlet>
    <servlet-name>HSQLDBServlet</servlet-name>
    <servlet-class>org.hsqldb.Servlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>SearchServlet</servlet-name>
    <url-pattern>/servlet/*</url-pattern>
  </servlet-mapping>


    <!-- Example filter to set character encoding on each request -->
    <filter>
        <filter-name>Set Character Encoding</filter-name>
        <filter-class>filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>Shift_JIS</param-value>
        </init-param>
    </filter>
	
    <filter-mapping>
        <filter-name>Set Character Encoding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
 
	 <!-- The Usual Welcome File List -->
  <welcome-file-list>
    <welcome-file>Json.html</welcome-file>
  </welcome-file-list>
</web-app>
